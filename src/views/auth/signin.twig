{% extends 'templates/app.twig' %}

{% block content %}

<div class="login">
    <div class="userlogin">
        <form method="post" name="userlogin" action='{{ url_for('signin') }}'>
            <h2>User Login</h2>
            <label>Username</label>
            <input type="text" placeholder="Email" name="email" value="{{ old.email }}"
                class="input{{ errors.email ? ' has-error' : '' }}" id="username" required>
            {% if errors.email %}
            <span class="help">{{ errors.email | first }}</span>
            {% endif %}
            <br>

            <label>Password</label>
            <input type="password" placeholder="Password" name="password" value="{{ old.password }}"
                class="input{{ errors.password ? ' has-error' : '' }}" id="password" required>
            {% if errors.password %}
            <span class="help">{{ errors.password | first }}</span>
            {% endif %}
            <br>

            {{ csrf.field | raw }}

            <button type="submit" class="login-btn" name="submit">Login</button>

            <a href="{{ url_for('recoverpassword') }}">Forgot Password?</a>
        </form>
    </div>

    <div class="adminlogin">
        <form method="post" name="adminlogin" action='{{ url_for('admin_signin') }}'>
