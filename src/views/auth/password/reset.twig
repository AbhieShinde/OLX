{% extends 'templates/product.twig' %}

{% block content %}

<form class="two" action="{{ url_for('resetpassword') }}" method="POST">
    
    <h1>Reset Your Password</h1>

    <div class="mail">
        
        <label>Password</label>
        <input class="b3" type="password" id="password" name="password" onblur="validatePassword(this);" required>
        <br>

        <span id="passwordhelp"></span><br><br>

        <label>Confirm Password</label>
        <input class="b3" type="password" name="cpassword" onblur="matchPass(this);" required>
        <br><br>

        <input type="hidden" name="email" value="{{ email }}">

        {{ csrf.field | raw }}

        <button type="submit" class="b4">Reset password</button>
    </div>

</form>

{% endblock %}